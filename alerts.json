{
  "REDIS": {
    "service": [],
    "REDIS": [
      {
        "name": "REDIS",
        "label": "REDIS Process",
        "description": "This host-level alert is triggered if the REDIS Master cannot be determined to be up.",
        "interval": 1,
        "scope": "HOST",
        "source": {
          "type": "PORT",
          "uri": "{{redis-ambari-config/redis.port}}",
          "default_port": 6379,
          "reporting": {
            "ok": {
              "text": "TCP OK - {0:.3f}s response on port {1}"
            },
            "warning": {
              "text": "TCP OK - {0:.3f}s response on port {1}",
              "value": 1.5
            },
            "critical": {
              "text": "Connection failed: {0} to {1}:{2}",
              "value": 5.0
            }
          }
        }
      }
    ]
  }
}
